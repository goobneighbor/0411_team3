<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.t09ether.home.dao.CustomerCenterDAO">
	<select id="boardList" resultType="com.t09ether.home.dto.CustomerCenterDTO">
		select cus_b_num, userid, subject, writedate from cus_center order by cus_b_num desc
	</select>
	<select id="boardView" parameterType="java.lang.Integer" resultType="com.t09ether.home.dto.CustomerCenterDTO">
		select cus_b_num, userid, subject, content, writedate from cus_center where cus_b_num = #{cus_b_num} 
	</select>
	<!-- 
	<select id="rankInfo" parameterType="String" resultType="com.t09ether.home.dto.CustomerCenterDTO">
		select r.rank from registerinfo r join cus_center c on r.userid=c.userid
	</select>
	-->
</mapper>